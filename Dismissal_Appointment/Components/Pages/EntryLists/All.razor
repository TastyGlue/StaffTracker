@inherits EntryListBase<EntryBase>

<MudDataGrid T="EntryBase"
             Items="Entries"
             @bind-SelectedItem="SelectedEntry"
             MultiSelection="false"
             SelectOnRowClick="true"
             RowClassFunc="@RowClassFunc"
             Filterable="true"
             FilterMode="DataGridFilterMode.Simple"
             SortMode="SortMode.Multiple"
             QuickFilter="QuickFilter"
             Hover="true"
             Striped="true"
             Loading="IsLoading"
             Elevation="1"
             Class="mb-4">

    <ToolBarContent>
        <MudTooltip Text="@Localizer["Create New Entry"]" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Material.Filled.Add" 
                           Variant="Variant.Filled"
                           Color="Color.Success"
                           Class="ml-2" />
        </MudTooltip>

        <MudTooltip Text="@Localizer["Edit Entry"]" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                           Variant="Variant.Filled"
                           Color="Color.Warning"
                           Disabled="SelectedEntry == null"
                           Class="ml-2" />
        </MudTooltip>

        <MudTooltip Text="@Localizer["Delete Entry"]" Placement="Placement.Bottom">
            <MudIconButton Icon="@Icons.Material.Filled.Delete"
                           Variant="Variant.Filled"
                           Color="Color.Error"
                           Disabled="SelectedEntry == null"
                           Class="ml-2" />
        </MudTooltip>

        <MudSpacer />

        <MudTextField @bind-Value="SearchString"
                        Placeholder="@Localizer["Search..."]"
                        Adornment="Adornment.Start"
                        AdornmentIcon="@Icons.Material.Filled.Search"
                        Immediate="true"
                        Class="ml-2" />
    </ToolBarContent>

    <Columns>
        <PropertyColumn Property="x => x.Id" Title="@Localizer["Id"]" />
        <PropertyColumn Property="x => x.IDN" Title="@Localizer["IDN"]" />
        <PropertyColumn Property="x => x.FirstName" Title="@Localizer["First Name"]"  />
    </Columns>

    <NoRecordsContent>
        <MudText>@Localizer["No entries to display"]</MudText>
    </NoRecordsContent>

    <PagerContent>
        <MudDataGridPager T="EntryBase" />
    </PagerContent>
</MudDataGrid>